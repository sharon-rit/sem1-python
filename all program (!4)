24mca50@projlabserver:~/sharon_mca24/python_lab/cycle2$ cat 6_count_letter_occourence_in_names_list.py 
names = "sharon, amal, vinayak, shine".split(", ")

total = 0

#print(names[-1])
#print(len(names))

for index in range(0,len(names)):
    count = names[index].count("a")
    if index >= len(names) - 1:
        print(f'{count} ', end="")
    else:
        print(f'{count} + ', end="")

    total += names[index].count("a")

print(f"= {total}")
